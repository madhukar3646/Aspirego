<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgetPasswordActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        >
    <ImageView
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo_icon"
        />
      <EditText
          android:id="@+id/mobile_number_edt"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:layout_marginBottom="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginLeft="20dp"
          android:maxLength="13"
          android:inputType="number"
          android:gravity="center"
          android:background="@android:color/white"
          android:hint="@string/mobile_number"
          android:textColorHint="@color/back_btn"
          android:padding="12dp"
          />
    <Button
        android:id="@+id/reset_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:background="@color/colorOrangebutton"
        android:text="@string/reset_password"
        android:textColor="@android:color/white"
        android:textSize="@dimen/subtitle"
        android:padding="15dp"
        />
    </LinearLayout>

<ImageView
    android:id="@+id/back_btn"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_margin="10dp"
    android:padding="@dimen/back_btn_padding"
    android:src="@mipmap/back_icon"
    />
</RelativeLayout>