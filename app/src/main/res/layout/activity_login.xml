<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_merchantsubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchant"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

            <CheckBox
                android:id="@+id/ch_merchantornot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_merchantsubtitle"
                android:layout_centerVertical="true"
                android:buttonTint="@android:color/white"
                />

        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/logo_icon"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_sociallogins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <RelativeLayout
            android:id="@+id/layout_fb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/fb_icon"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_google"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/gp_icon"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_socialloginstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_sociallogins"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LOGIN WITH"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/tv_socialloginstitle"
        android:layout_below="@+id/layout_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfields_background">
            <EditText
                android:id="@+id/et_mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="13"
                android:background="@android:color/transparent"
                android:hint="Mobile Number"
                android:inputType="number"
                android:layout_margin="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/textfields_background">
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_margin="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorOrangebutton">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                android:text="SIGNIN"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_createan_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="CREATE AN ACCOUNT"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_forgotpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="FORGOT PASSWORD?"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>